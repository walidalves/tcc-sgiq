@model IEnumerable<Sgiq.Dados.Models.Atividade>

@{
    ViewData["Title"] = "Atividades";
}



<div class="col-lg-12">
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
                <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> <span>Novo</span></a>
            </div>
        </div>
    </div>


    <div class="card mt-3">
        <div class="card-header">
            Atividade
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Projeto
                        </th>
                        <th>
                            Atividade
                        </th>
                        <th>
                            Data de início prevista
                        </th>
                        <th>
                            Data de fim prevista
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Projeto.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DtInicioPrevista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DtTerminoPrevista)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AtividadeId" class="btn btn-xs btn-success"><i class=" fa fa-pencil"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.AtividadeId" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">Nenhum Registro Encontrado</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
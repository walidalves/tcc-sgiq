@model Sgiq.Web.Models.AtividadeEditView;
@{
    ViewData["Title"] = "Editar Atividade";
}

<div class="col-lg-12">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header">
            Dados da atividade
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Edit" role="form">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Projeto</label>
                                <p>@ViewBag.Projeto.Nome</p>
                            </div>
                            <div class="form-group col-lg-12">
                                <label asp-for="Nome">Nome da Atividade</label>
                                <input asp-for="Nome" class="form-control" placeholder="informe nome">
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-12">
                                <label asp-for="Descricao">Descrição</label>
                                <textarea asp-for="Descricao" class="form-control" placeholder="Informe Descrição"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="DtInicio">Data de início prevista</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input asp-for="DtInicio" type="text" class="form-control" placeholder="DD/MM/AAAA">
                                </div>
                                <span asp-validation-for="DtInicio" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="DtFim">Data de fim prevista</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input asp-for="DtFim" type="text" class="form-control" placeholder="DD/MM/AAAA">
                                </div>
                                <span asp-validation-for="DtFim" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
                        <button type="button" class="btn btn-danger" id="btnCancelar"><i class="fa fa-ban"></i><span> Cancelar</span></button>
                    </form>
                </div>
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

@section scripts{
    <script src="~/js/atividades.js" type="text/javascript"></script>
}



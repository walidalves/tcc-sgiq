@model Sgiq.Web.Models.MedidaView;

@{
    ViewData["Title"] = "Incluir Medida";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Dados da medida
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Create" role="form">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label asp-for="Nome">Nome</label>
                                <input asp-for="Nome" class="form-control" placeholder="Informe o nome da medida">
                            </div>
                            <div class="form-group col-lg-12">
                                <label asp-for="TipoDadoId">Tipo de dado</label>
                                <select asp-for="TipoDadoId" class="form-control select2" data-placeholder="Selecione Gerente de Projeto">
                                    @foreach (Sgiq.Dados.Models.TipoDado tipoDado in ViewBag.TiposDados)
                                    {
                                        <option value="@tipoDado.TipoDadoId">@tipoDado.Nome</option>
                                    }                                    
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <label asp-for="VlrMinimo">Valor Mínimo</label>
                                <input asp-for="VlrMinimo" type="text" class="form-control" placeholder="Informe valor mínimo">
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="VlrMaximo">Valor Máximo</label>
                                <input asp-for="VlrMaximo" type="text" class="form-control" placeholder="Informe valor máximo">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
                        <button type="button" class="btn btn-danger" id="btnCancelar"><i class="fa fa-ban"></i><span> Cancelar</span></button>
                    </form>
                </div>
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->


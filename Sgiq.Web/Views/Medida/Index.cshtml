
@{
    ViewData["Title"] = "Incluir Medida";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Dados da medida
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form role="form">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Nome</label>
                                <input class="form-control" placeholder="Informe o nome da medida">
                                <p class="help-block">Máximo 30 caracteres</p>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Tipo de dado</label>
                                <select class="form-control select2" data-placeholder="Selecione Gerente de Projeto">
                                    <option></option>
                                    <option value="1">Inteiro</option>
                                    <option value="2">Flutuante</option>
                                    <option value="3">String</option>
                                    <option value="4">Character</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-4">
                                <label>Valor Mínimo</label>
                                <input type="text" class="form-control" placeholder="Informe valor mínimo">
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Valor Máximo</label>
                                <input type="text" class="form-control" placeholder="Informe valor máximo">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
                        <button type="button" class="btn btn-danger"><i class="fa fa-ban"></i><span> Cancelar</span></button>
                    </form>
                </div>
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->

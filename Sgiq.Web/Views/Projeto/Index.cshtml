@{
    ViewData["Title"] = "Incluir Projeto";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Dados do Projeto
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form role="form">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Nome</label>
                                <input class="form-control" placeholder="informe nome">
                                <p class="help-block">Máximo 30 caracteres</p>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Descrição</label>
                                <textarea class="form-control" placeholder="Informe Descrição"></textarea>
                                <p class="help-block">Máximo 250 caracteres</p>
                            </div>                            
                            <div class="form-group col-lg-12">
                                <label>Gerente de Projetos</label>
                                <select class="form-control select2" data-placeholder="Selecione Gerente de Projeto">
                                    <option></option>
                                    <option value="1">Felipe Cristo de Oliveira</option>
                                    <option value="2">Walid Arnous Alves</option>
                                </select>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Cliente</label>
                                <select class="form-control select2" data-placeholder="Selecione Cliente">
                                    <option></option>
                                    <option value="3">Faesa</option>
                                    <option value="4">Nexa</option>
                                </select>
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Data de início prevista</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control" placeholder="DD/MM/AAAA">
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Data de fim prevista</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control" placeholder="DD/MM/AAAA">
                                </div>
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Custo Estimado</label>
                                <div class="input-group">
                                    <span class="input-group-addon">R$</span>
                                    <input type="text" class="form-control" placeholder="DD/MM/AAAA">
                                </div>
                            </div>
                        </div>
                        
                        
                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
                        <button type="button" class="btn btn-danger"><i class="fa fa-ban"></i><span> Cancelar</span></button>
                    </form>
                </div>                
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<!-- /.col-lg-12 -->

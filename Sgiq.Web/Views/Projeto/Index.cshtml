@model IEnumerable<Sgiq.Dados.Models.Projeto>

@{
    ViewData["Title"] = "Projetos";
}



<div class="col-lg-12">
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
                <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> <span>Novo</span></a>
            </div>
        </div>
    </div>
    

    <div class="card mt-3">
        <div class="card-header">
            Projetos
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Data de Início Prevista
                        </th>
                        <th>
                            Data de Término Prevista
                        </th>
                        <th>
                            Custo Estimado
                        </th>
                        <th>
                            Situação
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
            {

                        @foreach (var item in Model)
                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DtInicioPrevista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DtTerminoPrevista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustoEstimado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SituacaoProjeto.Nome)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProjetoId" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.ProjetoId" class="btn btn-primary btn-xs"><i class="fa fa-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.ProjetoId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Nenhum Registro Encontrado</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@model Sgiq.Web.Models.ParteInteressadaProjetoView;

@{
    ViewData["Title"] = "Vincular Partes Interessadas";
}
<div class="col-lg-12">
    <form asp-action="Create" role="form">
        <div class="row">
            <div class="col-lg-12 mt-3">
                <div class="card">
                    <div class="card-header">Dados da Parte Interessada</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label><b>Projeto:</b></label>
                                <p>@ViewBag.Projeto.Nome</p>
                            </div>
                            <div class="form-group col-lg-8">
                                <label asp-for="ParteInteressadaId">Parte Interessada</label>
                                <select asp-for="ParteInteressadaId" class="form-control" data-placeholder="Selecione a Parte Interessada">
                                    @foreach (Sgiq.Dados.Models.ParteInteressada parteInteressada in ViewBag.PartesInteressadas)
                                    {
                                    <option value="@parteInteressada.ParteInteressadaId">@parteInteressada.Nome</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group col-lg-4">
                                <label asp-for="PapelId">Papel</label>
                                <select asp-for="PapelId" class="form-control" data-placeholder="Selecione o Papel">
                                    @foreach (Sgiq.Dados.Models.Papel papel in ViewBag.Papeis)
                                    {
                                    <option value="@papel.PapelId">@papel.Nome</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
        <button type="button" class="btn btn-danger" id="btnCancelar"><i class="fa fa-ban"></i><span> Cancelar</span></button>
    </form>
</div>


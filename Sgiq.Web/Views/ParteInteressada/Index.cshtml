
@{
    ViewData["Title"] = "Parte Interessada";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Dados da parte interessada
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form role="form">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Nome</label>
                                <input class="form-control" placeholder="informe nome">
                                <p class="help-block">Máximo 30 caracteres</p>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>Telefone</label>
                                <input class="form-control" placeholder="informe telefone">
                                <p class="help-block">Somente números inteiros</p>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>E-mail</label>
                                <input class="form-control" placeholder="informe e-mail">
                                <p class="help-block">Máximo 30 caracteres</p>
                            </div>
                        </div>


                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
                        <button type="button" class="btn btn-danger"><i class="fa fa-ban"></i><span> Cancelar</span></button>
                    </form>
                </div>
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

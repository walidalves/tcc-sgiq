@model IEnumerable<Sgiq.Dados.Models.ParteInteressada>

@{
    ViewData["Title"] = "Partes Interessadas";
}



<div class="col-lg-12">
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
                <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> <span>Novo</span></a>
            </div>
        </div>
    </div>
    

    <div class="card mt-3">
        <div class="card-header">
            Projetos
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            E-mail
                        </th>
                        <th>
                            Telefone
                        </th>                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
            {

                        @foreach (var item in Model)
                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ParteInteressadaId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ParteInteressadaId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ParteInteressadaId">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Nenhum Registro Encontrado</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
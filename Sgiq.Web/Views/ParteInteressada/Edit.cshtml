@model Sgiq.Web.Models.ParteInteressadaEditView;

@{
    ViewData["Title"] = "Editar Parte Interessada";
}

<div class="col-lg-12">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header">
            Parte Interessada
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Edit" role="form">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label asp-for="Nome">Nome</label>
                                <input asp-for="Nome" class="form-control" placeholder="informe nome">
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-12">
                                <label asp-for="Telefone">Telefone</label>
                                <input asp-for="Telefone" class="form-control" placeholder="informe telefone">
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-lg-12">
                                <label>E-mail</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="informe e-mail">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i><span> Salvar</span></button>
                        <button type="button" class="btn btn-danger" id="btnCancelar"><i class="fa fa-ban"></i><span> Cancelar</span></button>
                    </form>
                </div>
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

@section scripts{
    <script src="~/js/parteInteressada.js" type="text/javascript"></script>
}

